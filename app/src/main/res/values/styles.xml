<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4227BC</item>
        <item name="colorPrimaryDark">#311B92</item> //first
        <item name="colorAccent">#B388FF</item>
        <item name="android:navigationBarColor">#1D1AA5</item>
    </style>

    <style name="btn_styles" parent="Theme.AppCompat.Light.DarkActionBar">

        // bars
        <item name="colorPrimary">#3949AB</item>
        <item name="colorPrimaryDark">#304FFE</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/cutive</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#fff</item>

    </style>


    //theme 3rd
    <style name="btn_theme" parent="Theme.AppCompat.Light.NoActionBar">

    // bars
    <item name="colorPrimary">#1E103E</item>
    <item name="colorPrimaryDark">#1530D5</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:navigationBarColor">#1D1AA5</item>
    </style>


    // introductoion
    <style name="intro_styles" parent="Theme.AppCompat.Light.NoActionBar">

    // bars

    <item name="colorPrimaryDark">#3949AB</item>
    <item name="colorAccent">#3164D3</item>
        <item name="android:navigationBarColor">#2842E4</item>
    </style>
</resources>
