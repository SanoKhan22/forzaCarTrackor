<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Parent">

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
           />

    // layout

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <Button
            android:id="@+id/intro_horizonic"
            style="@style/btn_styles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.65"
            android:background="@drawable/back"
            android:fontFamily="@font/krona_one"
            android:text="@string/intro_main" />




        //explore cars

        <Button
            android:id="@+id/explore_cars"
            style="@style/btn_styles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:text="@string/explore_main" />

        <Button
            android:id="@+id/forza_control"
            style="@style/btn_styles"
            android:layout_width="match_parent"
                                                                                                                                       android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.65"
            android:background="@drawable/back"
            android:text="GAME\nConTrols" />


        <Button
        android:id="@+id/moreApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_weight="0.25"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#9A030105"
        android:fontFamily="@font/bree_serif"
        android:textColor="#fff"
            android:shadowColor="#E9EFF1"
            android:shadowRadius="1"
            android:shadowDx="3"
            android:shadowDy="3"
        android:textSize="30dp"
        android:text="MORE APPS" />
    </LinearLayout>



</LinearLayout>